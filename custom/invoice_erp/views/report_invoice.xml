<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="report_invoice_document_custom" inherit_id="account.report_invoice_document">
    <xpath expr="//div[@class='row']" position="replace">
      <div class="row">
        <div class="col-12" style="text-align:center;">
          <h2 style="color:navy;">My Custom Invoice Template</h2>
          <p>This is a test replacement to confirm everything is working.</p>
          <p>Customer: <span t-field="o.partner_id.name"/></p>
          <p>Invoice Date: <span t-field="o.invoice_date"/></p>
          <p>Total: <span t-field="o.amount_total"/></p>
        </div>
      </div>
    </xpath>
  </template>
</odoo>
